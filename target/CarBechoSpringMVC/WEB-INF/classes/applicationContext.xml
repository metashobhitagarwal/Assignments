<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="controller" />
	<context:component-scan base-package="daoLayer" />
	<context:component-scan base-package="factory" />
	<context:component-scan base-package="model" />
	<context:component-scan base-package="service" />

	<bean id="car" class="model.CarVO" ></bean>
	<bean id="service" class="service.CarServiceImpl" ></bean>
	<bean id="carDao" class="daoLayer.CarDAOImpl" ></bean>
	<bean id="facadeFactory" class="factory.FacadeFactory"></bean>

</beans>  